{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "plugin:import/typescript"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "arrow-body-style": "off",
        "no-unused-vars": "off",
        "import/extensions": "off",
        "class-methods-use-this": "off",
        "import/prefer-default-export": "off",
        "max-len": ["warn", {
            "code": 180,
            "tabWidth": 2,
            "comments": 200,
            "ignoreUrls": true,
            "ignoreStrings": true
        }],
        "no-case-declarations": "off"
    }
}
